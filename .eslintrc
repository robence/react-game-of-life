{
  "extends": [
    "airbnb-base",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-unexpected-multiline": "error",

    "quotes": [2, "single", "avoid-escape"],
    "ignoreTemplateLiterals": true,
    "padded-blocks": ["error", "never"]
  },
  "plugins": ["prettier", "react"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  }
}
